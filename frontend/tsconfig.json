{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",          // ✅ 也可用 "node16" 或 "nodenext"
    "types": ["node", "vite/client"],       // ✅ 让 TS 认识 Node 与 import.meta
    "allowJs": true,
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts",
    "env.d.ts"
  ]
}
